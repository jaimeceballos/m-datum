<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_establecimiento"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="mdatum.udc.com.m_datum.encuestaAgroquimicos.EstablecimientoActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/titulo_establecimiento"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:text="@string/tv_titulo_establecimiento"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_nombre_establecimiento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="20dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />


    <Button
        android:id="@+id/btn_capturar_ubicacion"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:text="@string/btn_capturar_ubicacion"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_nombre_establecimiento"
        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_long"
        app:layout_constraintTop_toTopOf="@+id/tv_lat" />

    <TextView
        android:id="@+id/tv_long"
        android:layout_width="55dp"
        android:layout_height="26dp"
        android:text="@string/tv_long"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_coord_long"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_editor_absoluteX="160dp" />

    <TextView
        android:id="@+id/tv_lat"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:text="@string/tv_lat"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_coord_lat"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.526" />

    <TextView
        android:id="@+id/tv_coord_long"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:text="@string/tv_coordenada_desconocida"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toRightOf="@+id/tv_coord_lat"
        android:layout_marginEnd="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_establecimiento"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_lat"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/tv_coord_lat"
        android:layout_width="116dp"
        android:layout_height="28dp"
        android:text="@string/tv_coordenada_desconocida"
        app:layout_constraintRight_toRightOf="@+id/et_nro_establecimiento"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sp_reg_tenencia"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintTop_toTopOf="@+id/titulo_establecimiento"
        android:layout_marginRight="-8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_foto"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:text="@string/btn_tomar_foto"
        app:layout_constraintLeft_toLeftOf="@+id/btn_capturar_ubicacion"
        app:layout_constraintRight_toRightOf="@+id/btn_capturar_ubicacion"
        app:layout_constraintTop_toBottomOf="@+id/btn_capturar_ubicacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/tv_reg_tenencia"
        app:layout_constraintVertical_bias="0.434" />

    <ImageView
        android:id="@+id/tv_establecimiento"
        android:layout_width="184dp"
        android:layout_height="81dp"
        app:layout_constraintRight_toRightOf="@+id/tv_coord_long"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_long"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/til_especificar"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintTop_toTopOf="@+id/tv_coord_lat"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_reg_tenencia"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:text="@string/tv_reg_tenencia"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_foto"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="124dp" />

    <Spinner
        android:id="@+id/sp_reg_tenencia"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:spinnerMode="dialog"
        app:layout_constraintRight_toRightOf="@+id/tv_establecimiento"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reg_tenencia"
        app:layout_constraintTop_toTopOf="@+id/tv_reg_tenencia" />


    <Button
        android:id="@+id/btn_siguiente"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_siguiente"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_nombre_establecimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_establecimiento"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_nro_establecimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="109dp"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_establecimiento"
        android:layout_marginEnd="109dp"
        app:layout_constraintRight_toRightOf="@+id/titulo_establecimiento"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_capturar_ubicacion"
        android:layout_marginLeft="109dp"
        android:layout_marginRight="109dp">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/et_nombre_establecimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/et_nombre"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/titulo_establecimiento"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_nro_establecimiento"
        tools:layout_constraintBaseline_creator="1" />

    <EditText
        android:id="@+id/et_nro_establecimiento"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_nro_establecimiento"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/titulo_establecimiento"
        android:layout_marginEnd="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_especificar"
        android:layout_width="340dp"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_reg_tenencia"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/tv_reg_tenencia">

        <EditText
            android:id="@+id/et_especificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginStart="84dp"
            android:ems="10"
            android:hint="@string/et_especificar"
            android:inputType="textPersonName"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btn_siguiente"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>