<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mdatum.udc.com.m_datum.encuestaAgroquimicos.FamiliaFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tv_titulo_familia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_titulo_familia"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tv_esposa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_esposa"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rg_hijos"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_titulo_familia"
        android:layout_marginLeft="16dp" />

    <RadioGroup
        android:id="@+id/rg_esposa"
        android:layout_width="117dp"
        android:layout_height="22dp"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/rg_hijos"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintTop_toTopOf="@+id/tv_titulo_familia"
        app:layout_constraintLeft_toRightOf="@+id/tv_hijos"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp">

        <RadioButton
            android:id="@+id/rb_esposa_si"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_esposa"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="@string/tv_si"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="56dp" />

        <RadioButton
            android:id="@+id/rb_esposa_no"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tv_hijos"
            android:layout_alignStart="@+id/tv_hijos"
            android:layout_below="@+id/rg_hijos"
            android:text="@string/tv_no"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="56dp"
            android:layout_weight="0.59" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_hijos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tv_hijos"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_esposa"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_varones"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:text="@string/tv_varones"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/et_cant_varones"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_cant_varones"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_cant_varones"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/et_cantidad"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/et_cant_mujeres"
        android:layout_marginTop="138dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_cant_mujeres"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_mujeres"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:text="@string/tv_mujeres"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_cant_mujeres"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_cant_mujeres"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/et_cantidad"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_cant_varones"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_mujeres"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_flia_siguiente"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_weight="1"
        android:text="@string/btn_siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <RadioGroup
        android:id="@+id/rg_hijos"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_varones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/rg_esposa"
        app:layout_constraintRight_toRightOf="@+id/rg_esposa"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_familia"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/rb_hijos_si"
            android:layout_width="51dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:text="@string/tv_si"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="94dp" />

        <RadioButton
            android:id="@+id/rb_hijos_no"
            android:layout_width="52dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:text="@string/tv_no"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="94dp" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>