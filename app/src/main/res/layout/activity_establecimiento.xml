<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mdatum.udc.com.m_datum.encuestaAgroquimicos.EstablecimientoActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/titulo_establecimiento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tv_titulo_establecimiento"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/et_nombre_establecimiento"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <EditText
        android:id="@+id/et_nombre_establecimiento"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="@string/et_nombre"
        android:inputType="textPersonName"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_capturar_ubicacion"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp" />

    <EditText
        android:id="@+id/et_nro_establecimiento"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="@string/et_nro_establecimiento"
        android:inputType="textPersonName"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_long"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo_establecimiento"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp" />

    <Button
        android:id="@+id/btn_capturar_ubicacion"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_capturar_ubicacion"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="148dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_long"
        android:layout_width="42dp"
        android:layout_height="16dp"
        android:text="@string/tv_long"
        app:layout_constraintBottom_toBottomOf="@+id/btn_capturar_ubicacion"
        android:layout_marginStart="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btn_capturar_ubicacion"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_lat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tv_lat"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_coord_lat"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_long"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nro_establecimiento"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_capturar_ubicacion"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_coord_long"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/tv_coordenada_desconocida"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_coord_lat"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_long"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_coord_lat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_coordenada_desconocida"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tv_coord_long"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lat"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_coord_long" />

    <Button
        android:id="@+id/btn_foto"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/btn_tomar_foto"
        android:layout_marginEnd="35dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reg_tenencia"
        app:layout_constraintRight_toRightOf="@+id/tv_long"
        android:layout_marginTop="81dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="83dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_capturar_ubicacion"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="35dp" />

    <ImageView
        android:id="@+id/tv_establecimiento"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sp_reg_tenencia"
        app:layout_constraintRight_toRightOf="@+id/titulo_establecimiento"
        android:layout_marginTop="96dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="97dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_lat"
        app:layout_constraintTop_toTopOf="@+id/btn_capturar_ubicacion"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/tv_reg_tenencia"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:text="@string/tv_reg_tenencia"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toLeftOf="@+id/sp_reg_tenencia"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="141dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="143dp"
        app:layout_constraintLeft_toLeftOf="@+id/titulo_establecimiento"
        app:layout_constraintTop_toTopOf="@+id/tv_long"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Spinner
        android:id="@+id/sp_reg_tenencia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/et_especificar"
        app:layout_constraintRight_toRightOf="@+id/titulo_establecimiento"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_long"
        app:layout_constraintTop_toTopOf="@+id/tv_reg_tenencia"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <EditText
        android:id="@+id/et_especificar"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/et_especificar"
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_foto"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintVertical_bias="0.557"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/btn_siguiente"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_siguiente"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>