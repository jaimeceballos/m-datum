<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="mdatum.udc.com.m_datum.encuestaAgroquimicos.EstablecimientoActivity">

    <TextView
        android:id="@+id/tv_titulo_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_encuestado"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


    <EditText
        android:id="@+id/et_nombre_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_nombre"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_titulo_encuestado"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/et_apellido_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_apellido"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/et_nombre_encuestado"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_encuestado"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_nombre_encuestado" />

    <EditText
        android:id="@+id/et_edad_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_edad"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/et_apellido_encuestado"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_apellido_encuestado"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_apellido_encuestado" />

    <TextView
        android:id="@+id/tv_nivel_instruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_instruccion"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et_edad_encuestado"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Spinner
        android:id="@+id/sp_niv_instruccion"
        android:layout_width="0dp"
        android:layout_height="41dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nivel_instruccion"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/radioGroup3"
        app:layout_constraintTop_toBottomOf="@+id/tv_nivel_instruccion"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_nivel_instruccion"
        android:layout_marginRight="1dp" />

    <Button
        android:id="@+id/btn_siguiente"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/btn_siguiente"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="129dp"
        android:layout_marginEnd="129dp"
        app:layout_constraintRight_toRightOf="@+id/sp_niv_instruccion"
        android:layout_marginTop="127dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_habita_establecimiento"
        android:layout_marginLeft="129dp"
        android:layout_marginRight="129dp" />


    <EditText
        android:id="@+id/et_nacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_nacionalidad"
        android:inputType="textPersonName"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/sp_niv_instruccion"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_edad_encuestado"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/sp_niv_instruccion" />

    <TextView
        android:id="@+id/tv_situación_estudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_situación"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioGroup"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_habita_establecimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_habita_establecimiento"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/radioGroup3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup3" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_habita_establecimiento"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/tv_habita_establecimiento"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_situación_estudio"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <RadioButton
            android:id="@+id/rb_completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_completo" />

        <RadioButton
            android:id="@+id/rb_incompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rb_incompleto"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="148dp" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup3"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="238dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_niv_instruccion"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="238dp">

        <RadioButton
            android:id="@+id/rb_habita"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_si" />

        <RadioButton
            android:id="@+id/rb_no_habita"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_no" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
