<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mdatum.udc.com.m_datum.encuestaAgroquimicos.EstablecimientoActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tv_titulo_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_encuestado"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


    <EditText
        android:id="@+id/et_apellido_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/et_apellido"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/tv_titulo_encuestado"
        app:layout_constraintRight_toRightOf="@+id/tv_titulo_encuestado"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_encuestado"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/et_nombre_encuestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/et_nombre"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/et_apellido_encuestado"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_apellido_encuestado"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_apellido_encuestado" />

    <EditText
        android:id="@+id/et_edad_encuestado"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="@string/et_edad"
        android:inputType="number"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_nombre_encuestado"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_encuestado" />

    <Spinner
        android:id="@+id/sp_nacionalidad"
        android:layout_width="192dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toTopOf="@+id/sp_niv_instruccion"
        app:layout_constraintLeft_toRightOf="@+id/et_edad_encuestado"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_encuestado"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/tv_nivel_instruccion"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/tv_instruccion"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/btn_encuestado_siguiente"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Spinner
        android:id="@+id/sp_niv_instruccion"
        android:layout_width="0dp"
        android:layout_height="41dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/rg_situacion"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_encuestado_siguiente"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/btn_siguiente"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/tv_situación_estudio"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:text="@string/tv_situación"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_habita_establecimiento"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="@+id/tv_nivel_instruccion"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nivel_instruccion"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="23dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_habita_establecimiento"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:text="@string/tv_habita_establecimiento"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_situacion"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

    <RadioGroup
        android:id="@+id/rg_habita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_situacion"
        android:layout_marginRight="16dp">

        <RadioButton
            android:id="@+id/rb_habita"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_si"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="398dp" />

        <RadioButton
            android:id="@+id/rb_no_habita"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_no"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="356dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_situacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_niv_instruccion"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_nivel_instruccion"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp">

        <RadioButton
            android:id="@+id/rb_completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/rb_completo" />

        <RadioButton
            android:id="@+id/rb_incompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/rb_incompleto"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="304dp" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
